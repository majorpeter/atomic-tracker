{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "sourceMap": true,

    /* Linting */
    "strict": true,
    //"noUnusedLocals": true,
    //"noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "outDir": "dist"
  },
  "include": ["src/*.ts", "src/migrations/*.ts"]
}
